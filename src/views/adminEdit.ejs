<!-- PARTIAL DEL HEAD -->
<%- include ('./partials/head', { extraFont: false, stylesheetPath: '/css/adminEdit.css' }) %>

    <!-- PARTIAL DEL HEADER -->
    <%- include ('./partials/header') %>

        <main>
            <section>
                <h1 class="title">INFORMACIÓN CONJUNTO RESIDENCIAL</h1>

                <form action="/administracion/editar" method="post" class="admin-container">

                    <article class="admin-buttons">
                        <a href="/administracion">Cancelar</a>

                        <button type="submit">Guardar</button>
                    </article>

                    <article class="edit-container">
                        <article>
                            <label for="name">Nombre:</label>
                            <input type="text" id="name" name="name" placeholder="Vivamos en paz" disabled>
                        </article>

                        <article>
                            <label for="address">Dirección:</label>
                            <input type="text" id="address" name="address" placeholder="<%= conjunto.o_direccion %>" disabled>
                        </article>

                        <article>
                            <label for="discount">Descuento de pago:</label>
                            <input type="text" id="discount" name="discount" placeholder="<%= conjunto.t_descuento %>">
                        </article>

                        <article>
                            <label for="mora">Tasa de mora:</label>
                            <input type="text" id="mora" name="mora" placeholder="<%= conjunto.t_mora %>">
                        </article>

                        <article>
                            <label for="fee">Cuota de administración:</label>
                            <input type="text" id="fee" name="fee" placeholder="<%= conjunto.v_base %>">
                        </article>

                        <% concepts.forEach(element => { %>

                            <article>
                                <label for="extra"><%= element.n_nombre %>:</label>
                                <input type="text" class="concepts" name="<%= element.k_concepto %>" placeholder="<%= element.v_valor %>">
                            </article>

                        <% }) %>
                        
                    </article>
                </form>
            </section>
        </main>

        <!-- SCRIPT DE LAS VALIDACIONES -->
        <script src="/scripts/editAdminAlert.js"></script>

        <!-- PARTIAL DEL FOOTER -->
        <%- include ('./partials/footer') %>