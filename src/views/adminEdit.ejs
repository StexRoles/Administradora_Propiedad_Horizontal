<!-- PARTIAL DEL HEAD -->
<%- include ('./partials/head', { extraFont: false, stylesheetPath: '/css/adminEdit.css' }) %>

    <!-- PARTIAL DEL HEADER -->
    <%- include ('./partials/header') %>

        <main>
            <section>
                <h1 class="title">INFORMACIÓN CONJUNTO RESIDENCIAL</h1>

                <form action="/administracion/editar" method="post" class="admin-container">

                    <article class="admin-buttons">
                        <a href="/administracion">Cancelar</a>

                        <button type="submit">Guardar</button>
                    </article>

                    <article class="edit-container">
                        <article>
                            <label for="name">Nombre:</label>
                            <input type="text" id="name" name="name" placeholder="Vivamos en paz" disabled>
                        </article>

                        <article>
                            <label for="address">Dirección:</label>
                            <input type="text" id="address" name="address" placeholder="Cra 15 #43" disabled>
                        </article>

                        <article>
                            <label for="adminFee">Valor cuota administración:</label>
                            <input type="text" id="adminFee" name="adminFee" placeholder="$25000">
                        </article>

                        <article>
                            <label for="discount">Descuento de pago:</label>
                            <input type="text" id="discount" name="discount" placeholder="12%">
                        </article>

                        <article>
                            <label for="account">N° Cuenta bancaria:</label>
                            <input type="text" id="account" name="account" placeholder="222211">
                        </article>

                        <article>
                            <label for="limitDate">Fecha limite descuento de pago:</label>
                            <input type="text" id="limitDate" name="limitDate" placeholder="07/06/2023">
                        </article>

                        <article>
                            <label for="mora">Tasa de mora:</label>
                            <input type="text" id="mora" name="mora" placeholder="5%">
                        </article>

                        <article>
                            <label for="extra">Cuotas extraordinarias:</label>
                            <input type="text" id="discount" name="discount" placeholder="$5000%">
                        </article>
                    </article>
                </form>
            </section>
        </main>

        <!-- PARTIAL DEL FOOTER -->
        <%- include ('./partials/footer') %>